@model Mvc.Models.MvcDbModel
@{
    ViewBag.Title = "AddOrEdit";
}
<style type="text/css">.font-st {
     font-size: large;
 }</style>

<div class="font-st">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.InventoryID)

        <div class="form-group">
            @Html.LabelFor(model => model.Name)*&emsp;&emsp;&emsp;&emsp;
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description)*&emsp;&ensp;
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Price)*&emsp;&emsp;&emsp;&emsp;&ensp;
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Quantity)&emsp;&emsp;&emsp;
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.InventoryValue)
            @Html.EditorFor(model => model.InventoryValue)
            @Html.ValidationMessageFor(model => model.InventoryValue)
        </div>
        <div class="form-group" style="text-align: center; ">
            <input type="submit" value="Submit" class="font-st;" />
            <input type="reset" value="Reset" class="font-st"/>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}
