@model IEnumerable<Mvc.Models.MvcDbModel>
@{
    ViewBag.Title = "Details";
}
<h2 style="font-size: 15px;">
    <a href="@Url.Action("AddOrEdit","Inventory")" class="btn btn-default" style="font-size: 15px;">Create New</a>

    <a href="@Url.Action("Index","Inventory")" class="btn btn-default" style="font-size: 15px;">Back</a>
</h2>
<table class="table" style="font-size: 13px;">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryValue)
            </th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InventoryValue)
                </td>
                <td>
                    <a href="@Url.Action("AddOrEdit","Inventory",new {id=item.InventoryID})" class="btn btn-default" style="font-size: 15px;">Edit</a>
                    <a onclick="return  confirm('Are You Sure To Remove This Entry ?')" href="@Url.Action("Delete","Inventory",new {id=item.InventoryID})" class="btn btn-default" style="font-size: 15px; ">Delete</a>
                </td>
            </tr>
        }
    </thead>
</table>

@section scripts{
    <script>
        $(function () {
            var msg = '@TempData["SuccessMessage"]';
            if (msg != '') {
                alertify.success(msg);
            }
        });

    </script>
}

